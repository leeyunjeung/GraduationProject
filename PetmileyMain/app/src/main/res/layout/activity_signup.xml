<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/singupToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/signupImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:riv_corner_radius="100dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_main_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColorHint="#CEF6D8"
            android:backgroundTint="#CEF6D8"
            android:textSize="12dp"
            android:hint="닉네임"/>

        <EditText
            android:id="@+id/editText_main_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#CEF6D8"
            android:backgroundTint="#CEF6D8"
            android:textSize="12dp"
            android:hint="이메일"
            android:ems="10"
            android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/signupCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="12dp"
            android:textColor="#FA5858"/>

        <EditText
            android:id="@+id/editText_main_password"
            android:hint="비밀번호"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#CEF6D8"
            android:backgroundTint="#CEF6D8"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editText_main_passwordcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#CEF6D8"
            android:backgroundTint="#CEF6D8"
            android:hint="비밀번호 확인"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editText_main_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textColorHint="#CEF6D8"
            android:backgroundTint="#CEF6D8"
            android:ems="10"
            android:hint="전화번호"
            android:textSize="12dp"
            android:inputType="phone" />


        <Button
            android:id="@+id/button_main_insert"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>